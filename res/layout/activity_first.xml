<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beij"
    android:id="@+id/first" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_marginTop="2dip" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_gravity="bottom"
            android:background="#33000000"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片标题"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/dot_0"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip" 
                    android:background="@drawable/dot_focused"/>
                <View
                    android:id="@+id/dot_1"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip" 
                    android:background="@drawable/dot_normal"/>
                <View
                    android:id="@+id/dot_2"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip" 
                    android:background="@drawable/dot_normal"/>
                <View
                    android:id="@+id/dot_3"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip" 
                    android:background="@drawable/dot_normal"/>
                <View
                    android:id="@+id/dot_4"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip" 
                    android:background="@drawable/dot_normal"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dip" 
        android:background="#ffdab9"
        android:layout_marginTop="202dip"
         >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简单易学的理财平台－i理财"
            style="@style/text_color_size"
            android:layout_gravity="top"
            android:paddingLeft="70dp"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal" >
            <Button 
		            android:layout_width="90dp"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dp"
			        android:text="简单易学"
			        android:textSize="14sp"
			        android:layout_gravity="left"
			        android:background="@drawable/btn_background"
			        android:textColor="#ffc0cb"/>
            <Button 
		            android:layout_width="90dp"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dp"
			        android:text="随买随记"
			        android:textSize="14sp"
			        android:layout_gravity="center"
			        android:background="@drawable/btn_background"
			        android:textColor="#ffc0cb"/>
            <Button 
		            android:layout_width="90dp"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dp"
			        android:layout_gravity="right"
			        android:text="个人理财"
			        android:textSize="14sp"
			        android:background="@drawable/btn_background"
			        android:textColor="#ffc0cb"/>
        </LinearLayout>
        <View  
		   android:layout_width="fill_parent"  
		   android:layout_height="1px" 
		   android:background="?android:attr/listDivider"  
		/> 
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dip" 
        android:background="#ffdab9"
        android:layout_marginTop="282dip"
         >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="240dip"
            android:gravity="left"
            android:orientation="vertical">
            <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:gravity="center"
            android:orientation="horizontal">	 	            
            <ImageView 
		            android:src="@drawable/aa"    
		            android:layout_height="60dp"
		            android:layout_width="80dp"
		            android:paddingTop="10dp"
	                />
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="3dip"
	                android:orientation="vertical">
	            <TextView 
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="工资理财"
		            style="@style/text_color_size"
		            android:layout_gravity="top"
		            android:paddingLeft="100dp"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="记录每个月工资"
		            android:layout_gravity="bottom"
		            android:paddingLeft="90dp"
	                />
	            </LinearLayout>
	            </LinearLayout>
	            <LinearLayout 
			            android:layout_width="match_parent"
			            android:layout_height="60dip"
			            android:gravity="center"
			            android:orientation="horizontal">
	            <ImageView 
	            android:src="@drawable/bb"    
	            android:layout_height="60dp"
	            android:layout_width="80dp"
	            android:paddingTop="10dp"
                />
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="3dip"
	                android:orientation="vertical">
	            <TextView 
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="生活理财"
		            style="@style/text_color_size"
		            android:layout_gravity="top"
		            android:paddingLeft="100dp"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="记录生活的点滴"
		            android:layout_gravity="bottom"
		            android:paddingLeft="90dp"
	                />
	            </LinearLayout>
	            </LinearLayout>>
	            <LinearLayout 
			            android:layout_width="match_parent"
			            android:layout_height="60dip"
			            android:gravity="center"
			            android:orientation="horizontal">
	            <ImageView 
	            android:src="@drawable/cc"    
	            android:layout_height="60dp"
	            android:layout_width="80dp"
	            android:paddingTop="10dp"
                />
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="3dip"
	                android:orientation="vertical">
	            <TextView 
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="数据管理"
		            style="@style/text_color_size"
		            android:layout_gravity="top"
		            android:paddingLeft="100dp"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="管理收入和支出"
		            android:layout_gravity="bottom"
		            android:paddingLeft="90dp"
	                />
	            </LinearLayout>
	            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>