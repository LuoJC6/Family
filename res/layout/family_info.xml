<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iteminfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_marginTop="5dp"
    android:weightSum="1">

    <LinearLayout android:id="@+id/linLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.06" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:gravity="center"
                android:textSize="20dp"
               
                android:text="收入列表"/>

       </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp">

            <TextView android:id="@+id/tvInfo1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="序号" />
            <TextView android:id="@+id/tvInfo2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvInfo1"
                android:textSize="20dp"
                android:text="金额" />
            <TextView android:id="@+id/tvInfo3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvInfo2"
                android:textSize="20dp"
                android:text="类别" />
            <TextView android:id="@+id/tvInfo4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvInfo3"
                android:textSize="20dp"
                android:text="时间" />
      </RelativeLayout>
   </LinearLayout>

   <LinearLayout
       android:id="@+id/linLyout2"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:orientation="vertical" >

        <ListView
            android:id="@+id/lvnaccountinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarAlwaysDrawVerticalTrack="true" >

       </ListView>
   </LinearLayout>
</LinearLayout>
