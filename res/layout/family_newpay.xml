<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/incot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bj1"
    android:orientation="vertical" >
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textSize="35sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="请添加新增支出" />
      </LinearLayout>
     <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        <RelativeLayout 
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:padding="10dp">

          <TextView android:id="@+id/tvInMoney"
              android:layout_width="90dp"
              android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="金额"
               android:layout_alignBottom="@+id/txtmoney"
               android:layout_alignBaseline="@+id/txtInMoney"
               android:layout_alignParentLeft="true"
               android:layout_marginLeft="16dp"/>

          <EditText
              android:id="@+id/txtmoney"
              android:layout_width="210dp"
              android:layout_height="wrap_content" 
              android:layout_toRightOf="@id/tvInMoney"
              android:inputType="number"
              android:maxLength="9"
              android:hint="0.00"/>
          
          <TextView android:id="@+id/tvTime"
              android:layout_width="90dp"
              android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="时间"
               android:layout_alignBottom="@+id/txttime"
               android:layout_alignBaseline="@+id/txttime"
               android:layout_toLeftOf="@+id/txtmoney"/>
          <EditText
              android:id="@+id/txttime"
              android:layout_width="210dp"
              android:layout_height="wrap_content" 
              android:layout_toRightOf="@id/tvTime"
              android:layout_below="@id/txtmoney"
              android:inputType="datetime"
              android:hint="2016-01-01"/>
          
            <TextView android:id="@+id/tvType"
              android:layout_width="90dp"
              android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="类别"
               android:layout_alignBottom="@+id/txttype"
               android:layout_alignBaseline="@+id/txttype"
               android:layout_alignLeft="@+id/tvTime"
               />
<!--             <Spinner
                android:id="@+id/spInType"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvInType" 
                android:layout_below="@id/txtInTime"
                android:entries="@array/intype"
                /> -->
                <EditText 
                android:id="@+id/txttype"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvType" 
                android:layout_below="@id/txttime"
                    />
            <TextView android:id="@+id/InHandler"
              android:layout_width="90dp"
              android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="来源"
               android:layout_alignBottom="@+id/txtaddress"
               android:layout_alignBaseline="@+id/txtaddress"
               android:layout_toLeftOf="@+id/txttype"/>
          <EditText
              android:id="@+id/txtaddress"
              android:layout_width="210dp"
              android:layout_height="wrap_content" 
              android:layout_toRightOf="@id/InHandler"
              android:layout_below="@id/txttype"
              android:singleLine="false"
              />
          <TextView android:id="@+id/tvMark"
              android:layout_width="90dp"
              android:layout_height="wrap_content"
               android:textSize="20sp"
               android:text="备注"
               android:layout_alignTop="@+id/txtmark"
               android:layout_toLeftOf="@+id/txtaddress"/>
          <EditText
              android:id="@+id/txtmark"
              android:layout_width="210dp"
              android:layout_height="wrap_content" 
              android:layout_toRightOf="@id/tvMark"
              android:layout_below="@id/txtaddress"
              android:gravity="top"
              android:singleLine="false"/>
        </RelativeLayout>      
     </LinearLayout>
     <LinearLayout android:orientation="vertical"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent" 
         android:layout_weight="3"
         android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp" >

          <Button android:id="@+id/btnCancel"
              android:layout_width="80dp"
              android:layout_height="wrap_content" 
              android:layout_alignParentRight="true"
              android:layout_marginLeft="10dp"
              android:text="返回"/>
          
          <Button android:id="@+id/btnpaySave"
              android:layout_width="80dp"
              android:layout_height="wrap_content"
              android:layout_toLeftOf="@id/btnCancel"
              android:text="保存" />
            
        </RelativeLayout>
     </LinearLayout>  
</LinearLayout>
